#!groovy

pipeline {
    agent any
    environment {
        App = "test"
    }


    stages {
        stage("Build") {
            steps {
                sh "mvn -version"
                sh "mvn clean install"
                
                sh 'docker build . -t magasin-image'
            }
        }
        stage('Deploy') {
        	steps {
        		sh 'docker-compose up -d'
        	}
        }
    }
    post {
        always {
            sh "rm -rf /home/kvm/${App}/${App}.jar"
            sh "cp /var/lib/jenkins/workspace/Spring/target/*.jar  /home/kvm/${App}/${App}.jar"
     
        }
    }
   
}
