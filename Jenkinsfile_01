#!groovy

pipeline {
    agent any



    stages {
        stage("Build") {
            steps {
                sh "mvn -version"
                sh "mvn clean install"
                
                sh "pwd"
            }
        }
    }
    post {
        always {
            sh "rm /home/kvm/maven-pipeline-demo-1.0-SNAPSHOT.jar"
            sh "cp /var/lib/jenkins/workspace/Spring/target/maven-pipeline-demo-1.0-SNAPSHOT.jar  /home/kvm/maven-pipeline-demo-1.0-SNAPSHOT.jar"
            cleanWs()
        }
    }
   
}
