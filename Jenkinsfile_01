#!groovy

pipeline {
    agent any



    stages {
        stage("Build") {
            steps {
                sh "mvn -version"
                sh "mvn clean install"
                
                sh 'docker build . -t magasin-image'
            }
        }
        stage('Deploy') {
        	steps {
        		sh 'docker-compose up -d'
        	}
        }
    }
    post {
        always {
            sh "rm -rf /home/kvm/maven-pipeline-demo-1.0-SNAPSHOT.jar"
            sh "cp /var/lib/jenkins/workspace/Spring/target/maven-pipeline-demo-1.0-SNAPSHOT.jar  /home/kvm/jar/maven-pipeline-demo-1.0-SNAPSHOT.jar"
     
        }
    }
   
}
